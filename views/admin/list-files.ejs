<title>(<%=files.length%>) List of Files</title>
<div class="table-responsive py-5 mb-5">
  <table class="table table-hover">
    <thead class="thead-dark">
      <tr>
        <th scope="col">#</th>
        <th scope="col">Source</th>
        <th scope="col">Content Type</th>
        <th scope="col">Size</th>
        <th scope="col">Key</th>
      </tr>
    </thead>
    <tbody>
      <% for( let i = 0; i < files.length; i++ ) { const file = files[i] %>
      <tr>
        <th scope="row"><%=i%></th>
        <td style="width: 20em;">
          <a
            data-toggle="lightbox"
            data-gallery="gallery"
            href="/files/<%= file.filname %>"
          >
            <img
              src="/files/<%= file.filname %>"
              class="w-50"
              alt="<%= file.fileID %>"
            />
          </a>
        </td>
        <td><%= file.contentType %></td>
        <td><%= file.size %></td>
        <td><%= file.fileID %></td>
      </tr>
      <% } %>
    </tbody>
  </table>
</div>
