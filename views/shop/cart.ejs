<%- include('../includes/navbar') %>
<div class="text-center">
  <%- include('../includes/messages') %>
</div>
<div class="container card bg-light shadow my-4">
  <div class="row justify-content-center">
    <% if (products.length > 0) { %>
    <div class="col">
      <% products.forEach(product => { %>
      <a href="/<%= product.slug%>"
        ><div class="list-group-item list-group-item-action flex-column">
          <div class="w-100 mb-2">
            <img
              src="/files/<%= product.thumbnail.filename %>"
              class="d-inline-block mr-2"
              style="width: 200px;"
              alt="<%= product.thumbnail.filename %>"
            />
            <div class="mt-2 text-capitalize d-inline-block">
              <h1><%= product.productId.title %></h1>
              <p><%= product.productId.description %></p>
              <h4><%= product.productId.price %> â‚¹</h4>
              <h2>Quantity: <%= product.quantity %></h2>
            </div>
            <form action="/cart-delete-item" method="POST">
              <input
                type="hidden"
                value="<%= product.productId._id %>"
                name="productId"
              />
              <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
              <button class="btn btn-outline-danger btn-block" type="submit">
                Delete
              </button>
            </form>
          </div>
          <a href="/auth/<%= product.author.username%>" class="w-100">
            <%- include('./avatar', {user: product.author}) %>
            <p class="mb-0 d-inline-block">By <%= product.author.username %></p>
          </a>
        </div></a
      ><% }) %>
    </div>
    <div class="align-content-center text-center">
      <a class="btn btn-block btn-outline-success" href="/checkout"
        >Order Now!</a
      >
    </div>
    <% } else { %>
    <h1>No Products in Cart!</h1>
    <% } %>
  </div>
</div>
<div class="container card bg-light shadow my-4">
  <div class="list-group mb-3">
    <div class="text-center">
      <% if (profile.saved.length<=0) { %>
      <h3 class="mt-3">No Saved Products</h3>
      <% } else { %>
      <h3 class="mt-3">Saved Products</h3>
      <% } %>
    </div>
    <% for( let i = 0; i < profile.saved.length; i++ ) { %>
    <div>
      <%- include('../includes/list-of-product',{product : profile.saved[i]})%>
    </div>
    <%}%>
  </div>
</div>
<%-include('../includes/footer') %>
